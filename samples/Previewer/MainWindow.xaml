<Window xmlns="https://github.com/avaloniaui" Width="600" Height="500"
        Title="Previewer">
    <Grid RowDefinitions="0.5*,Auto,Auto,200">
        <ScrollViewer Name="Remote"/>
        
        <ScrollViewer Grid.Row="1" Name="ErrorsContainer" Background="#ffe0e0">
            <TextBlock Name="Errors"/>
        </ScrollViewer>

        <Border Grid.Row="2" Name="HotReloadContainer" Background="#e0f7ff" IsVisible="False">
            <StackPanel Margin="4" Spacing="4">
                <TextBlock Name="HotReloadSummary" FontWeight="Bold"/>
                <ItemsControl Name="HotReloadIssues">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" Spacing="2"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </StackPanel>
        </Border>

        <TextBox Grid.Row="3" AcceptsReturn="True" Name="Xaml"/>
    </Grid>
    
</Window>
